<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textEntrando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|top"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginBottom="369dp"
        android:text="@string/start_value"
        android:textColor="@color/color_green"
        android:textSize="@dimen/fontSize_big"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonEntrando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="233dp"
        android:layout_marginRight="233dp"
        android:layout_marginBottom="233dp"
        android:onClick="BotonEntrando"
        android:text="Persona entrando!" />

    <TextView
        android:id="@+id/textSaliendo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="369dp"
        android:text="@string/start_value"
        android:textColor="@color/color_red"
        android:textSize="@dimen/fontSize_big"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonSaliendo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="231dp"
        android:layout_marginLeft="231dp"
        android:layout_marginBottom="233dp"
        android:onClick="BotonSaliendo"
        android:text="Persona Saliendo!" />

</RelativeLayout>